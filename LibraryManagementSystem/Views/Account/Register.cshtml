@model LibraryManagementSystem.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg bg-dark text-light">
                <div class="card-header bg-success text-white">
                    <h3 class="text-center mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="control-label"></label>
                            <input asp-for="Username" class="form-control bg-dark text-light border-success" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" type="password" class="form-control bg-dark text-light border-success" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="role" class="control-label">Role</label>
                            <select name="role" class="form-control bg-dark text-light border-success">
                                <option value="User">User</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success btn-lg shadow">Register</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-dark">
                    <p class="mb-0">Already have an account? <a asp-action="Login" class="text-success">Login here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
