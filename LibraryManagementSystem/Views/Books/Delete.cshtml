@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<div>
    <h4>Are you sure you want to delete this book?</h4>
    <div>
        <h5>@Model.Title</h5>
        <p><strong>Author:</strong> @Model.Author</p>
        <p><strong>ISBN:</strong> @Model.ISBN</p>
        <p><strong>Quantity:</strong> @Model.Quantity</p>
        <p><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
